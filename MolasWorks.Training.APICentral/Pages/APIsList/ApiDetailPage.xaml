<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MolasWorks.Training.APICentral.Pages.APIsList.ApiDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="{DynamicResource primary-back-title-color}" HeightRequest="70">
                <Label Text="{Binding APIName}" 
                   FontSize="30"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   TextColor="white"
                   />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>