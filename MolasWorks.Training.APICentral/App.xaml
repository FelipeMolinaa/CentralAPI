<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MolasWorks.Training.APICentral.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="primary-back-title-color">#005909</Color>

            <Style TargetType="Button" x:Key="FABStyle">
                <Setter Property="CornerRadius" Value="100"/>
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="Margin" Value="20,20"/>
                <Setter Property="WidthRequest" Value="70"/>
                <Setter Property="HeightRequest" Value="70"/>
                <Setter Property="Padding" Value="0,0,1,3"/>
                <Setter Property="BackgroundColor" Value="{DynamicResource primary-back-title-color}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>